@model List<GorevListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-action="EkleGorev" asp-controller="Gorev" class="btn btn-outline-dark btn-sm my-2"><i class="fas fa-plus-circle mr-2"></i>Yeni Gorev  </a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>

                <th>Ad</th>
                <th>Açıklama</th>
                <th>Oluşturulma Tarihi</th>
                <th>Aciliyet Durumu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Ad</td>
                    <td>@item.Aciklama</td>
                    <td>@item.OlusturulmaTarih.ToString("D")</td>
                    <td>@item.Aciliyet.Tanim</td>
                    <td>
                        <a asp-action="GuncelleGorev" asp-controller="Gorev" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit mr-2"></i>Düzenle</a>
                        @*<a href="TamamlandiGorev" class="btn btn-outline-danger btn-sm" data-toggle="modal" data-target="#TamamlandiEkrani" data-yavuz="@item.Id">Tamamlandı</a>*@
                        <a href="SilAciliyet"  data-toggle="modal" data-target="#silmeEkrani" data-yavuz="@item.Id" class="btn btn-danger btn-sm"> <i class="fas fa-times-circle mr-2"></i>Sil</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>
}
else
{
    <div class="text-center  my-4">
        <p class="lead">Sistemde kayıtlı aciliyet bulunamadı</p>
        <a asp-action="EkleGorev" asp-controller="Gorev" class="btn btn-sm btn-info my-2">Yeni Gorev Ekle </a>

    </div>
}
<!-- Modal -->
<div class="modal fade" id="silmeEkrani" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">Uyarı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                <button id="btnSil" type="button" class="btn btn-primary">Evet Sil</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="TamamlandiEkrani" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">Uyarı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Görev Tamamlandi kaldırmak istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                <button id="btnSil" type="button" class="btn btn-primary">Evet Kaldır</button>
            </div>
        </div>
    </div>
</div>
@section JavaScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#silmeEkrani").on("show.bs.modal", function (event) {
                let tetikleyenElement = $(event.relatedTarget);
                let id = tetikleyenElement.data("yavuz");

                $("#btnSil").click(function () {
                    $.ajax({
                        type: "Get",
                        url: "./Gorev/SilGorev",
                        data: { id: id },
                        dataType: "json",
                        contentType: "aplication/json;chartset=utf-8;",
                        success: function () {
                            //alert("işlem tamam");
                            window.location.reload();
                        },
                        error: function (error) {
                            alert(error.statusText);
                        }
                    })
                });
            })

        });




    </script>

}

